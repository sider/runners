module Runners
  module Schema
    type source_full = {
      head: String,
      head_key: String?,
      base: String?,
      base_key: String?
    }

    type source_head_only = {
      head: String,
      head_key: String?
    }

    type source = source_full | source_head_only

    class Options < StrongJSON
      def source: -> StrongJSON::Type::Enum[source]
      def outputs: -> StrongJSON::Type::Array[String]?
      def ssh_key: -> String?
    end
  end
end
